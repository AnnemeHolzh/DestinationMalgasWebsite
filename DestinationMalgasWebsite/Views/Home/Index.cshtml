@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - My ASP.NET Application</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand" style="display: flex; align-items: center;">
                        <img src="~/Assets/Logo/logoBlackTransparent.svg" alt="Destination Malgas Logo" />
                    </a>
                </div>
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="/" style="color: black;">HOME</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Accommodation" asp-action="Accommodation">ACCOMMODATION</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Boating" asp-action="Boating">BOATING</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Marketing" asp-action="Marketing">MARKETING</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Destination" asp-action="Destination">DESTINATION</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Contact" asp-action="ContactUs">CONTACT US</a></li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Login" asp-action="Login" style="display: flex; align-items: center;">
                            <img src="~/Assets/Landing/Icon/searchIcon.svg" alt="Search" class="nav-icon height: 10px; width: 10px;" />
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Login" asp-action="Login" style="display: flex; align-items: center;">
                            <img src="~/Assets/Landing/Icon/loginIcon.svg" alt="Login" class="nav-icon height: 10px; width: 10px;" />
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <main>
        <section class="section section1">
            <button class="circle-button left-button" onclick="changeSlide('prev')">
                <img src="~/Assets/Landing/Buttons/leftCircleButton.svg" alt="Left Button">
            </button>

            <button class="circle-button right-button" onclick="changeSlide('next')">
                <img src="~/Assets/Landing/Buttons/rightCircleButton.svg" alt="Right Button">
            </button>

            <div class="slide-container">
                <img id="slide-svg" src="~/Assets/Landing/TopText/DM_TopText_1.png" alt="Slide Text">
                <p id="slide-description" class="slide-description">Welcome to Destination Malgas</p>
            </div>
            <script src="~/js/LandingSlideshowLogic.js"></script>
        </section>

        <section class="section section2">
            <!-- Content for the second section -->
        </section>
        <section class="section section3">
            <!-- Content for the third section -->
        </section>
    </main>

    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
</body>
</html>
