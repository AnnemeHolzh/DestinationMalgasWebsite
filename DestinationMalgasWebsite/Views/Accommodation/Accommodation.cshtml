@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<House>

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/accommodation.css" />
</head>
<body >
    <main>
        <div class="headingWrapper">
            <img src="~/Assets/Accommodation/houseHeader.jpg" alt="Heading Image" class="responsive-heading-image" />
            <img src="~/Assets/Landing/TopText/DM_Slide2.svg" alt="Title Image" class="title-image" />
        </div>

        <div class="gridSection">
            <div class="gridLayout">
                @foreach (var house in Model)
                {
                    <a href="@Url.Action("AccommodationDetails", "Accommodation", new { id = house.Id })">
                        <div class="card">
                            @if (house.ImageUrls.Any())
                            {
                                <img src="@Url.Content(house.ImageUrls.First())" alt="@house.Name" class="card-img">
                            }
                            else
                            {
                                <img src="~/Assets/Accommodation/default.jpg" alt="Default Image" class="card-img">
                            }
                            <div class="card-content-wrapper">
                                <!-- New wrapper -->
                                <div class="card-content">
                                    <h2 class="card-title">@house.Name</h2>
                                    <p class="card-description">@house.GlanceDesc</p>
                                </div>
                                <div class="card-info">
                                    <div class="info-item">
                                        <img src="~/Assets/Accommodation/Icons/bedIcon.svg" alt="Bed Icon" class="info-icon">
                                        <span class="info-text">@house.Sleeps</span>
                                    </div>
                                    <div class="info-item">
                                        <img src="~/Assets/Accommodation/Icons/bathIcon.svg" alt="Bath Icon" class="info-icon">
                                        <span class="info-text">@house.Bath</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                }
            </div>

        </div>
    </main>

    <script src="~/js/site.js"></script>
    <script src="~/js/ContactButtonLogic.js"></script>
</body>
</html>
