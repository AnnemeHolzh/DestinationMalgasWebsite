@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - My ASP.NET Application</title>
    <link rel="stylesheet" href="~/css/boating.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="container">
                <div class="navbar-header">
                    <a class="navbar-brand" style="display: flex; align-items: center;">
                        <img src="~/Assets/Logo/logoBlackTransparent.svg" alt="Destination Malgas Logo" />
                    </a>
                </div>
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">HOME</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Accommodation" asp-action="Accommodation">ACCOMMODATION</a></li>
                    <li class="nav-item"><a class="nav-link" style="color: black;" asp-controller="Boating" asp-action="Boating">BOATING</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Marketing" asp-action="Marketing">MARKETING</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Destination" asp-action="Destination">DESTINATION</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Contact" asp-action="ContactUs">CONTACT US</a></li>

                    <!--
                        <li class="nav-item">
                        <a class="nav-link" asp-controller="Login" asp-action="Login" style="display: flex; align-items: center;">
                            <img src="~/Assets/Landing/Icon/searchIcon.svg" alt="Search" class="nav-icon height: 10px; width: 10px;" />
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Login" asp-action="Login" style="display: flex; align-items: center;">
                            <img src="~/Assets/Landing/Icon/loginIcon.svg" alt="Login" class="nav-icon height: 10px; width: 10px;" />
                        </a>
                    </li>
                         -->
                </ul>
            </div>
        </nav>
    </header>
        <main>
        <div class="grid-wrapper">
            <div class="grid-container">
                <div class="grid-item" data-id="1" data-url="@Url.Action("Charters", "Boating")">
                    <img src="~/Assets/Boating/Images/chartersImage.jpg" alt="Image 1">
                </div>

                <div class="grid-item" data-id="2" data-url="@Url.Action("Rentals", "Boating")">
                    <img src="~/Assets/Boating/Images/rentalsUpdate.jpg" alt="Image 2">
                </div>

                <div class="grid-item" data-id="3" data-url="@Url.Action("BaitAndTackle", "Boating")">
                    <img src="~/Assets/Boating/Images/baitAndTackle.jpg" alt="Image 3">
                </div>
            </div>
        </div>

        </main>



    <footer>
        <div class="footer-column left">
            <h3>Our Location</h3>
            <p>
                OFFICE & SHOP:<br>
                PLOT 412, DIEPKLOOF, MALGAS, WC<br>
                Tar Road Diepkloof<br>
                Next to The Boathouse Pub & Pizza, Malgas, WC, 6740
            </p>
        </div>
        <div class="footer-column center">
            <img src="~/Assets/Logo/footer_logo.png" alt="Footer Logo" class="responsive-image" />
        </div>


        <div class="footer-column right">
            <h3>Contact Us!</h3>
            <div class="contact-info">
                <div class="contact-item">
                    <img src="~/Assets/Footer/Icon/emailIcon.svg" alt="Email Icon" class="contact-icon">
                    <p>
                        <a href="mailto:twan@destinationmalgas.co.za">twan@destinationmalgas.co.za</a><br>
                    </p>
                </div>
                <div class="contact-item">
                    <img src="~/Assets/Footer/Icon/phoneIcon.svg" alt="Phone Icon" class="contact-icon">
                    <p>
                        <a href="https://wa.me/27671629081" target="_blank">+27 (0) 671 629 081</a>
                    </p>
                </div>
            </div>

            <div class="icons-section">
                <img src="~/Assets/Footer/Icon/facebookIcon.svg" alt="Facebook Icon" class="footer-icon">
                <img src="~/Assets/Footer/Icon/instagramIcon.svg" alt="Instagram Icon" class="footer-icon">
                <img src="~/Assets/Footer/Icon/linkedInIcon.svg" alt="LinkedIn Icon" class="footer-icon">
                <img src="~/Assets/Footer/Icon/tiktokIcon.svg" alt="TikTok Icon" class="footer-icon">
                <img src="~/Assets/Footer/Icon/youtubeIcon.svg" alt="YouTube Icon" class="footer-icon">
            </div>

        </div>
    </footer>
        <script>
        document.querySelectorAll('.grid-item').forEach(item => {
        let timer;

        item.addEventListener('mouseover', () => {
        timer = setTimeout(() => {
        // Remove 'scale' class from any currently scaled item
        document.querySelector('.grid-item.scale')?.classList.remove('scale');

        // Add 'scale' class to the hovered item
        item.classList.add('scale');
        }, 500); // Adjust delay as needed
        });

        item.addEventListener('mouseout', () => {
        clearTimeout(timer); // Clear the timer if hover is removed before the delay
        item.classList.remove('scale');
        });
        });

            document.querySelectorAll('.grid-item').forEach(item => {
                item.addEventListener('click', () => {
                    const url = item.getAttribute('data-url');
                    window.location.href = url;
                });
            });
        </script>

            <script src="~/js/site.js"></script>

</body>

</html>


